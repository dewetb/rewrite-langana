<h3>User</h3>
<p>First name: <%= @user.firstname if @user.firstname %></p>
<p>Last name: <%= @user.lastname if @user.lastname %></p>
<p>Email: <%= @user.email if @user.email %></p>
<p>Role: <%= @user.role.capitalize if @user.role %></p>

  <footer>
    <nav>
      <% if current_user %>
        <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
        <%= link_to 'Delete Account', @user,
                    method: :delete,
                    data: { confirm: 'Are you sure you want to permanently delete your account?' },
                    class: 'button' %>
        <%= link_to 'Give Reference', new_user_work_reference_path(@user), class: 'button' %>
      <% else %>
        <%= link_to 'Give Reference', new_user_work_reference_path(@user), class: 'button' %>
      <% end %>
    </nav>

  <ul id="users">
    <h3>References from people I've worked for</h3>
    <% @user.work_references.each do |reference| %>
      <li>
        <div>
          <%= link_to reference.employer_user.firstname, reference.employer_user %>
        <div>
        <%= reference.work.capitalize %>
        </div>
        <%= reference.comment %>
        <div>
        Reviewed on
        <%= reference.created_at.strftime("%d %b. %Y") %>
        </div>
      </li>
    <% end %>
  </ul>


  </footer>
